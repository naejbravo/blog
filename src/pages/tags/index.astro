---
import { getCollection } from 'astro:content';
import Base from './../../layouts/Base.astro';
const allPosts = await getCollection('posts');
const tags = [...new Set(allPosts.map((post)=> post.data.tags).flat())]
---
<Base>
    <div class="flex flex-wrap mx-0 my-auto">
        {tags.map((tag) => <p class=" m-1 border-dotted border-[1px] border-gray-300 rounded-lg px-2 py-4 text-base bg-green-400"><a href={`/tags/${tag}`}>{tag}</a></p>)}
    </div>
</Base>
